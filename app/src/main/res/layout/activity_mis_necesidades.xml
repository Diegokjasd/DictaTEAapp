<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mis_necesidades">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/barra_color"
            android:clickable="true"
            android:contentDescription="@string/floating"
            app:backgroundTint="@color/barrahome2_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97"

            app:srcCompat="@drawable/ic_home" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Misnecesidadesnecesidades"
                    android:layout_width="375dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Mis necesidades ________"
                    android:textColor="@color/_bg__yoquiero_color"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/necesidadesview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="necesidadesview"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/yo_voy" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/irbaniotx"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/baniotx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/peinarmetx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/peinarmetx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/cepillarmetx"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/dientestx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/banio2"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/banio"
                                    android:contentDescription="banio"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeBanio2"
                                    app:backgroundTint="@null" />

                                <Button
                                    android:id="@+id/peinarme"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/peinarme"
                                    android:contentDescription="peinarme"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajePeinarme"
                                    app:backgroundTint="@null" />

                                <Button
                                    android:id="@+id/dientes"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/cepillarme"
                                    android:contentDescription="cine"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeCepillarme"
                                    app:backgroundTint="@null" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/baniarme2tx"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/baniarmetx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/jabontx"
                                    android:layout_width="126dp"
                                    android:layout_height="41dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="usar jabón"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/shampoostx"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/shampootx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="205dp"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/baniarme2"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/baniiarme"
                                    android:contentDescription="baniarme"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeBaniarme2"
                                    app:backgroundTint="@null" />

                                <Button
                                    android:id="@+id/jabon"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/jabon"
                                    android:contentDescription="jabon"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeJabon"
                                    app:backgroundTint="@null" />

                                <Button
                                    android:id="@+id/shampoo"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/shampoo"
                                    android:contentDescription="shampoo"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeShampoo"
                                    app:backgroundTint="@null" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/lavarmetx"
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/caratx_string"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/ayuda2txt"
                                    android:layout_width="93dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="ayuda (sos)"
                                    android:textColor="@color/_bg__yoquiero_color"
                                    android:textSize="20sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/lavarme"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/cara"
                                    android:contentDescription="lavarme"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeLavarme"
                                    app:backgroundTint="@null" />

                                <Button
                                    android:id="@+id/sos"
                                    android:layout_width="114dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/sos"
                                    android:contentDescription="sos"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:onClick="MensajeSos"
                                    app:backgroundTint="@null" />
                            </TableRow>

                        </TableLayout>


                    </LinearLayout>


                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>